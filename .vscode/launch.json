{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Storybook",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run storybook --no-open",
      "internalConsoleOptions": "openOnFirstSessionStart"
    },
    {
      "name": "Start Storybook in Firefox",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run storybook --no-open",
      "internalConsoleOptions": "openOnFirstSessionStart",
      "serverReadyAction": {
        "pattern": "Local:.+(https?://[^:]+:[0-9]+)",
        "action": "startDebugging",
        "name": "Launch Firefox against Storybook"
      }
    },
    {
      "name": "Start Storybook in Chrome",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run storybook --no-open",
      "internalConsoleOptions": "openOnFirstSessionStart",
      "serverReadyAction": {
        "pattern": "Local:.+(https?://[^:]+:[0-9]+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Launch Firefox against Storybook",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "url": "http://localhost:6006",
      "webRoot": "${workspaceFolder}",
      // https://github.com/storybookjs/storybook/discussions/26153
      "suggestPathMappingWizard": true,
      "pathMappings": [
        {
          "url": "webpack://sheetflow",
          "path": "${workspaceFolder}"
        }
      ]
    },
    {
      "name": "Launch Chrome against Storybook",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:6006"
    }
  ]
}
